.wrapper
  .outline
    .content
      .content__sign-up-and-in
        .align.align__sign-in
          .content__sign-up-and-in__left
            .content__sign-up-and-in__left__icon-area
              = image_tag("main_icon.png", class: "content__sign-up-and-in__left__icon-area__icon mobile-none")
              = image_tag("main_icon_background.png", class: "content__sign-up-and-in__left__icon-area__icon desktop-none")
          .content__sign-up-and-in__right
            .content__sign-up-and-in__right__title-area
              %h3{class: "content__sign-up-and-in__right__title-area__title"} ログイン
            = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              .field
                = f.label :メールアドレス
                %br/
                = f.email_field :email, class: "form-decoration under-form transparent-form transparent-form"
              .field
                = f.label :パスワード
                %br/
                = f.password_field :password, autocomplete: "off", class: "form-decoration under-form transparent-form transparent-form"
              - if devise_mapping.rememberable?
                .field.margin-bottom
                  = f.check_box :remember_me
                  = f.label :アカウントを記憶する
              .actions.mobile-actions
                = f.submit "ログイン", class: "btn btn-main full-width-btn"
            = render "users/shared/links"
