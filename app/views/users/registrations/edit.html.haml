.wrapper
  .outline
    .content
      = render 'side-bar/setting'
      .content__main
        %h3
          アカウント設定
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = devise_error_messages!
          .field
            %span
              新しい
            = f.label :アカウント名
            %br/
            = f.text_field :name, autofocus: true, class: "form-decoration under-form transparent-form transparent-form", placeholder: "変更しない場合は今までのアカウント名を記入してください"
          .field
            %span
              新しい
            = f.label :email
            %br/
            = f.email_field :email, class: "form-decoration under-form transparent-form transparent-form", placeholder: "変更しない場合は今までのメールアドレスを記入してください"
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}
          .field
            %span
              新しい
            = f.label :password
            %br/
            = f.password_field :password, autocomplete: "off", placeholder: "変更しない場合は空欄にしてください", class: "form-decoration under-form transparent-form transparent-form"
          .field
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off", class: "form-decoration under-form transparent-form transparent-form", placeholder: "変更しない場合は空欄にしてください"
          .field
            = f.label :current_password
            %br/
            = f.password_field :current_password, autocomplete: "off", class: "form-decoration under-form transparent-form transparent-form", placeholder: "アカウント情報を変更するためには、現在のパスワードが必要です"
          .actions.mobile-actions.ue
            = f.submit "変更", class: "btn btn-main full-width-btn"
          アカウント削除は
          = link_to "こちら", registration_path(resource_name), data: { confirm: "アカウントを削除します。よろしいですか？" }, method: :delete, class: "text-link"
          から
