.wrapper
  .outline
    .content
      .content__sign-up-and-in
        .align
          .content__sign-up-and-in__left
            .content__sign-up-and-in__left__icon-area
              = image_tag("main_icon.png", class: "content__sign-up-and-in__left__icon-area__icon mobile-none")
              = image_tag("main_icon_background.png", class: "content__sign-up-and-in__left__icon-area__icon desktop-none")
          .content__sign-up-and-in__right
            .content__sign-up-and-in__right__title-area
              %h3{class: "content__sign-up-and-in__right__title-area__title"} アカウント新規作成
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              = devise_error_messages!
              .field
                = f.label :アカウント名
                %br
                = f.text_field :name, autofocus: true, class: "form-decoration under-form transparent-form", placeholder: "必須・最大20文字まで"
              .field
                = f.label :メールアドレス
                %br/
                = f.email_field :email, class: "form-decoration under-form transparent-form transparent-form", placeholder: "必須"
              .field
                = f.label :パスワード
                - if @minimum_password_length
                  %em
                    (#{@minimum_password_length} 文字以上)
                %br/
                = f.password_field :password, autocomplete: "off", class: "form-decoration under-form transparent-form", placeholder: "必須"
              .field
                = f.label :パスワード（確認）
                %br/
                = f.password_field :password_confirmation, autocomplete: "off", class: "form-decoration under-form transparent-form", placeholder: "必須"
              .actions
                .botton-area
                  %a{href: ""}規約
                  %span を確認して、
                  = f.submit "新規作成", class: "btn btn-main"
