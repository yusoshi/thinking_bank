.div{ class: "header-wrapper" }
  %header{ class: "header-wrapper__header", id: "top-head" }
    .header-wrapper__header__left
      .header-wrapper__header__left__icon-area
        = link_to image_tag('main_icon.png', class: "header-wrapper__header__left__icon-area__main-icon"), root_path
      %h1{ class: "header-wrapper__header__left__title" }
        = link_to '思考銀行', root_path
    .header-wrapper__header__right
      .header-wrapper__header__right__icon-area
        %ul{ class: "header-wrapper__header__right__icon-area__lists" }
          %li{ class: "header-wrapper__header__right__icon-area__lists__list"}
            = link_to image_tag('header/writing.png'), '', class: "header-wrapper__header__right__icon-area__lists__list__link"
          %li{ class: "header-wrapper__header__right__icon-area__lists__list"}
            = link_to image_tag('header/setting.png'), '', class: "header-wrapper__header__right__icon-area__lists__list__link"
          %li{ class: "header-wrapper__header__right__icon-area__lists__list"}
            = link_to image_tag('header/help.png'), '', class: "header-wrapper__header__right__icon-area__lists__list__link"
          %li{ class: "header-wrapper__header__right__icon-area__lists__list"}
            = link_to 'Logout', destroy_user_session_path, method: :delete, class: "header-wrapper__header__right__icon-area__lists__list__link text-link"

